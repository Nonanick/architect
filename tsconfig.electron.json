{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "importHelpers": true,
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "paths": {
      "@architect/*" : ["src/lib/architect/typings/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dev",
    "src/ui",
    "src/templates",
    "node_modules",
    "public",
    ".vscode"
  ]
}