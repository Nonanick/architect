{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "importHelpers": true,
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "experimentalDecorators": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "dev",
    "./src/ui",
    "node_modules",
    "public",
    ".vscode"
  ]
}