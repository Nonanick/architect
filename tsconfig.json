{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": false,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/server/**/*",
    "src/templates/architect"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "src/templates/*"
  ]
}