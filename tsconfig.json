{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": false,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/ui",
    "src/lib",
    "src/templates/architect",
    "src/server"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "src/templates",
    "src/app",
  ]
}