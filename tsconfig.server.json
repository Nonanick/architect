{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "src/server",
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*",
    "src/templates/*"
  ]
}